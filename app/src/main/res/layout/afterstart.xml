<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AfterstartActivity"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/DispName1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="50dp"
        android:textSize="36sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="100dp" />

    <Button
        android:id="@+id/java"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="67dp"
        android:background="@drawable/shapenextbutton"
        android:shadowColor="@android:color/transparent"
        android:text="@string/java"
        app:layout_constraintTop_toBottomOf="@+id/DispName1"
        android:textSize="40sp"
        android:textColor="#ffffff"
        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/cpp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="57dp"
        android:background="@drawable/shapestart"
        android:shadowColor="@android:color/transparent"
        android:text="@string/cpp"
        app:layout_constraintTop_toBottomOf="@+id/java"
        android:textSize="40sp"
        android:textColor="#ffffff"
        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="57dp"
        android:background="@drawable/shapenextbutton"
        android:shadowColor="@android:color/transparent"
        android:text="@string/c"
        app:layout_constraintTop_toBottomOf="@+id/cpp"
        android:textSize="40sp"
        android:textColor="#ffffff"
        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/python"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="57dp"
        android:background="@drawable/shapestart"
        android:shadowColor="@android:color/transparent"
        android:text="@string/python"
        app:layout_constraintTop_toBottomOf="@+id/c"
        android:textSize="40sp"
        android:textColor="#ffffff"
        tools:ignore="MissingConstraints" />

</android.support.constraint.ConstraintLayout>